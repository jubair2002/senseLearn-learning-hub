# Flask Application Configuration
SECRET_KEY=your secret key
FLASK_ENV=production
FLASK_DEBUG=False

# Database Configuration
DB_USER=db name
DB_PASSWORD=db pass
DB_HOST=db host
DB_PORT=3306
DB_NAME=db name

# API Endpoint Configuration
API_PREFIX=/api
AUTH_API_PREFIX=/api/auth
STUDENT_API_PREFIX=/student/api
TUTOR_API_PREFIX=/tutor/api

# URL Route Prefixes
STUDENT_URL_PREFIX=/student
TUTOR_URL_PREFIX=/tutor

# Password Configuration
MIN_PASSWORD_LENGTH=8
RESET_CODE_LENGTH=6
RESET_CODE_VALIDITY_MINUTES=15

# User Type Configuration
VALID_USER_TYPES=student,tutor
DEFAULT_USER_TYPE=student

# Disability Type Configuration
VALID_DISABILITY_TYPES=Deaf,Mute,Blind,Other

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# SQLAlchemy Configuration
SQLALCHEMY_ECHO=False

#SMTP config
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your name
SMTP_PASSWORD=your password
SMTP_FROM_EMAIL=your email addr
SMTP_USE_TLS=True

#File Uploads locations and configuration
UPLOAD_DIR=your path
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,ppt,pptx,gif,txt,mp4,webm,avi,mov,mkv
